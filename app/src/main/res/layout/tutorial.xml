<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:spinnerMode="dialog"
    android:background="@drawable/bg"
    android:onClick="Restart">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/player" />

    <TextView
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="#ffffff"
        android:layout_toRightOf="@+id/imageView"
        android:ems="10"
        android:inputType="none"
        android:text="Your ship is out of fuel, but luckily it is equipped with a selective gravity actuator. Using it, you may still be able to get back to Earth."
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/editText5"
        android:textColor="#dddddd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:ems="10"
        android:inputType="none"
        android:text="Tap on planets to toggle their gravity on and off. If you collide with something other than Earth, you have to restart the level. If you collide with Earth, the level is completed. GLHF"
        android:textSize="24sp" />


</RelativeLayout>